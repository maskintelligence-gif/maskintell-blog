---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TestimonialCard from "../../components/TestimonialCard.astro";

const testimonials = await Astro.glob("../../content/testimonials/*.md");

const published = testimonials
  .map(t => t.frontmatter)
  .sort((a, b) => new Date(b.date) - new Date(a.date));
---

<BaseLayout
  title="Testimonials"
  description="What our clients and partners say about MASK Intelligence."
>
  <section class="container">
    <header class="page-header">
      <h1>Testimonials</h1>
      <p>Real feedback from people who worked with us.</p>
    </header>

    <div class="testimonial-grid">
      {published.map(testimonial => (
        <TestimonialCard testimonial={testimonial} />
      ))}
    </div>
  </section>
</BaseLayout>
