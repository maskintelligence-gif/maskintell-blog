---
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const entries = await Astro.glob("../../content/team/*.md");
  return entries.map(e => ({
    params: { slug: e.frontmatter.slug },
    props: { entry: e }
  }));
}

const { entry } = Astro.props;
const m = entry.frontmatter;
---

<BaseLayout title={m.name} description={m.bio}>
  <article class="container team-single" itemscope itemtype="https://schema.org/Person">
    <h1 itemprop="name">{m.name}</h1>
    <p itemprop="jobTitle">{m.position}</p>

    {m.photo && <img src={m.photo} alt={m.name} />}

    <div itemprop="description">{m.bio}</div>
  </article>
</BaseLayout>
