---
import BaseLayout from "../../layouts/BaseLayout.astro";
import TeamCard from "../../components/TeamCard.astro";

const members = await Astro.glob("../../content/team/*.md");

const active = members
  .map(m => m.frontmatter)
  .filter(m => m.active !== false)
  .sort((a, b) => a.order - b.order);
---

<BaseLayout title="Our Team" description="Meet the people behind MASK Intelligence.">
  <section class="container">
    <h1>Our Team</h1>

    <div class="team-grid">
      {active.map(member => (
        <TeamCard member={member} />
      ))}
    </div>
  </section>
</BaseLayout>
