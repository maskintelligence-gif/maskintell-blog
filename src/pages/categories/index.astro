---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCategories } from "../../utils/taxonomy";

const categories = await getCategories();
---

<BaseLayout title="Categories">
  <h1>Categories</h1>

  <ul class="grid">
    {categories.map(cat => (
      <li style={`border-left:4px solid ${cat.data.color ?? "#3B82F6"}`}>
        <a href={`/categories/${cat.slug}`}>
          <h2>{cat.data.title}</h2>
          <p>{cat.data.description}</p>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>
